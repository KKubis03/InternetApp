@model IEnumerable<MeetingDto>

@{
	ViewData["Title"] = "Index";
}

<div class="container">
	<div class="grid">
		<p class="m-2">
			<a class="button bg-custom2 fg-white" asp-action="Create">Create New</a>
		</p>
		<div class="row">
			@foreach (var item in Model)
			{
				<div class="cell-md-3">
					<div class="card">
						<div class="card-header">
							<h5 class="text-medium m-0 fg-custom">
								@Html.DisplayFor(modelItem => item.CustomerFirstName)
								@Html.DisplayFor(modelItem => item.CustomerLastName)
							</h5>
						</div>
						<div class="card-content p-5">
							@Html.DisplayFor(modelItem => item.MeetingStatusName) <br />
							<strong>@Html.DisplayFor(modelItem => item.MeetingDate.Date)</strong>

						</div>
						<div class="card-footer">
							<a class="mr-2" asp-action="Edit" asp-route-id="@item.Id"><span class="mif-pencil"></span></a>
							<a asp-action="Delete" asp-route-id="@item.Id"><span class="mif-bin fg-red"></span></a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
@model CustomerDto

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4 class="createTitle">Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name & Surname
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Street)  @Html.DisplayFor(model => model.Number)  @Html.DisplayFor(model => model.Code)  @Html.DisplayFor(model => model.City)  @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
</div>
<div>
    <a class="button bg-custom fg-white" asp-action="Index"><img class="IndexIcon" src="\Resources\Icons\icon_back.png"></img></a>
    <a class="button bg-customEdit fg-white" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
</div>

@model DocumentDto

@{
	ViewData["Title"] = "Edit";
}


<h4 class="createTitle">Document</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Title" class="label-input"></label>
				<input asp-for="Title" class="form-control" placeholder="Enter a Title"
					   data-informer="Enter a valid Title"
					   data-role="materialinput" data-cls-line="bg-custom"
					   data-cls-informer="fg-custom" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FileName" class="label-input"></label>
				<input asp-for="FileName" class="form-control" placeholder="Enter a FileName"
					   data-informer="Enter a valid FileName"
					   data-role="materialinput" data-cls-line="bg-custom"
					   data-cls-informer="fg-custom" />
				<span asp-validation-for="FileName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="FilePath" class="label-input"></label>
				<input asp-for="FilePath" class="form-control" placeholder="Enter a FilePath"
					   data-informer="Enter a valid FilePath"
					   data-role="materialinput" data-cls-line="bg-custom"
					   data-cls-informer="fg-custom" />
				<span asp-validation-for="FilePath" class="text-danger"></span>
			</div>
			<div class="form-group">
				<a class="button bg-custom fg-white" asp-action="Index"><img class="IndexIcon" src="\Resources\Icons\icon_back.png"></img></a>
				<input type="submit" value="Save" class="button bg-custom2 fg-white" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

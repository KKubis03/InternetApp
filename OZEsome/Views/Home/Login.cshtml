@{
	ViewData["Title"] = "Login";
}
<div class="login container-fluid">
	<div class="grid">
		<div class="row">
			<div class="cell-lg" style="margin-right: 50px;">
				<img src="\Resources\Images\OZELOGO.png" style="width: 350px;"></img>
			</div>
			<div class="cell">
				<h2 class="fg-custom2 bold">Log in</h2>
				<form>
					<div class="form-group">
						<label class="label-input fg-custom2">Email</label>
						<input type="email" placeholder="Enter email"
							   data-informer="Enter a valid email address"
						data-role="materialinput" data-cls-line="bg-custom2" 
						data-cls-informer="fg-custom2" />
					</div>
					<div class="form-group">
						<label class="label-input fg-custom2">Password</label>
						<input type="password" placeholder="Enter password"  data-role="materialinput"
							   data-informer="Enter a valid password"
							   data-cls-line="bg-custom2"
							   data-cls-informer="fg-custom2"/>
					</div>
					<div class="form-group">
						<input type="checkbox" data-role="checkbox" data-caption="Remember me" data-cls-caption="fg-custom2" data-cls-check="bd-custom2 myCheck2" data-style="2" />
					</div>
					<div class="form-group">
						<button class="button info rounded bg-custom2">Log in</button>
						<input type="button" class="button rounded" value="Cancel">
					</div>
					<p class="text-secondary">If you don't have an account, <a asp-action="SignUp" class="fg-custom2">Sign up</a></p>
				</form>
			</div>
		</div>
	</div>

</div>

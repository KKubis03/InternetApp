@model OrderDto

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
	<h4 class="createTitle">Order</h4>
	<hr />
	<div class="container">
		<div class="h4">
			Order
		</div>
		<div>
			<strong>Date: </strong> @Html.DisplayFor(model => model.OrderDate)
		</div>
		<div class="h4">
			Customer
		</div>
		<div>
			<strong>Name: </strong> @Html.DisplayFor(model => model.CustomerFirstName)
		</div>
		<div>
			<strong>Surname: </strong> @Html.DisplayFor(model => model.CustomerLastName)
		</div>
		<div class="h4">
			Product
		</div>
	</div>
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<a class="button bg-custom" asp-action="Index"><img class="IndexIcon" src="\Resources\Icons\icon_back.png"></img></a>
		<input type="submit" value="Delete" class="button bg-custom bg-customDelete fg-white" />
	</form>
</div>

@using OzeSome.Data.Models.Dtos
@model NewOrderDetailDto
@{
	ViewData["Title"] = "CreateDetails";
}
<h1>CreateDetails</h1>

<h4 class="createTitle">OrderDetails</h4>
<hr />
<div class="container">
	<form asp-action="CreateDetails">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group">
			<label asp-for="OrderId" class="label-input">Order</label>
			<select data-role="select" asp-for="OrderId" class="form-control" asp-items="ViewBag.Orders" data-cls-option="bg-white fg-custom"
					data-cls-selected-item="bg-custom" data-validate="required"></select>
		</div>
		<div class="form-group">
			<label asp-for="CustomerId" class="label-input">Customer</label>
			<select data-role="select" asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers" data-cls-option="bg-white fg-custom"
					data-cls-selected-item="bg-custom" data-validate="required"></select>
		</div>
		<div class="form-group">
			<label asp-for="ProductId" class="label-input">Product</label>
			<select data-role="select" asp-for="ProductId" class="form-control" asp-items="ViewBag.Products" data-cls-option="bg-white fg-custom"
					data-cls-selected-item="bg-custom" data-validate="required"></select>
		</div>
		<div class="form-group">
			<label asp-for="Quantity" class="label-input"></label>
			<input asp-for="Quantity" class="form-control" placeholder="Enter a Quantity"
				   data-informer="Enter a valid Quantity"
				   data-role="materialinput" data-cls-line="bg-custom"
				   data-cls-informer="fg-custom" />
			<span asp-validation-for="Quantity" class="text-danger"></span>
		</div>
		<div class="form-group">
			<a class="button bg-custom fg-white" asp-action="Index"><img class="IndexIcon" src="\Resources\Icons\icon_back.png"></img></a>
			<input type="submit" value="CreateDetails" class="button bg-custom2 fg-white" />
		</div>
	</form>
</div>
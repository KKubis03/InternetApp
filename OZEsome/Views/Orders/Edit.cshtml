@model OrderDto

@{
	ViewData["Title"] = "Edit";
}


<h4 class="createTitle">Order</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<input type="hidden" asp-for="Id" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="OrderDate" class="label-input"></label>
				<input asp-for="OrderDate" class="form-control" type="text" data-role="calendarpicker" data-input-format="%d-%m-%y" data-cls-line="bg-custom" data-cls-informer="fg-custom">
				<span asp-validation-for="OrderDate" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CustomerId" class="label-input">Customer</label>
				<select data-role="select" asp-for="CustomerId" class="form-control" asp-items="ViewBag.Customers" data-cls-option="bg-white fg-custom"
						data-cls-selected-item="bg-custom"></select>
				<span asp-validation-for="CustomerId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="OrderStatusName" class="label-input">Status</label>
				<select data-role="select" asp-for="OrderStatusId" class="form-control" asp-items="ViewBag.OrderStatusses" data-cls-option="bg-white fg-custom"
						data-cls-selected-item="bg-custom"></select>
				<span asp-validation-for="OrderStatusId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<a class="button bg-custom fg-white" asp-action="Index"><img class="IndexIcon" src="\Resources\Icons\icon_back.png"></a>
				<input type="submit" value="Save" class="button bg-custom2 fg-white" />
			</div>
		</form>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

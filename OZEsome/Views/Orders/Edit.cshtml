@model OrderDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4 class="createTitle">Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="OrderDate" class="label-input"></label>
                <input asp-for="OrderDate" type="text" data-role="calendarpicker" data-input-format="%d-%m-%y">
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus" class="label-input"></label>
                <input asp-for="OrderStatus" class="form-control" placeholder="Enter a OrderStatus"
                       data-informer="Enter a valid OrderStatus"
                       data-role="materialinput" data-cls-line="bg-custom"
                       data-cls-informer="fg-custom" />
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="button bg-custom fg-white" asp-action="Index"><img class="IndexIcon" src="\Resources\Icons\icon_back.png"></img></a>
                <input type="submit" value="Save" class="button bg-custom2 fg-white" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
